<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dip"
                android:weightSum="5">
    <TextView android:layout_width="0dip" android:layout_height="match_parent" android:layout_weight="2"
    android:id="@+id/comment_body"/>

    <TextView android:layout_width="0dip" android:layout_height="match_parent" android:layout_weight="2"
              android:id="@+id/comment_email"/>

    <TextView android:layout_width="0dip" android:layout_height="match_parent" android:layout_weight="1"
              android:id="@+id/comment_name"/>
</LinearLayout>